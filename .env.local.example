# Firebase Configuration
VITE_FIREBASE_API_KEY=your_firebase_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
VITE_FIREBASE_APP_ID=your_app_id

# Legacy Firebase Configuration (if needed)
VITE_OLD_FIREBASE_API_KEY=your_old_api_key_here
VITE_OLD_FIREBASE_AUTH_DOMAIN=your_old_project_id.firebaseapp.com
VITE_OLD_FIREBASE_PROJECT_ID=your_old_project_id
VITE_OLD_FIREBASE_STORAGE_BUCKET=your_old_project_id.appspot.com
VITE_OLD_FIREBASE_MESSAGING_SENDER_ID=your_old_messaging_sender_id
VITE_OLD_FIREBASE_APP_ID=your_old_app_id

# Gemini API (Optional)
VITE_GEMINI_API_KEY=your_gemini_api_key_here

# Encryption Key for Personal Data (REQUIRED)
# Generate a strong random key (minimum 16 characters, recommended 32+)
# Example generation in Node.js:
#   node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# Or use online generator: https://generate-random.org/encryption-key-generator
VITE_ENCRYPTION_KEY=your_256bit_encryption_key_here_min_32_chars

# Master Account Email for Initial Setup
VITE_MASTER_EMAIL=master@example.com
VITE_MASTER_PASSWORD=your_secure_master_password

# Instructions:
# 1. Copy this file to .env.local
# 2. Replace all placeholder values with your actual credentials
# 3. NEVER commit .env.local to Git
# 4. Keep your encryption key safe - losing it means losing encrypted data
